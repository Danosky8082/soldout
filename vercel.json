{
  "version": 2,
  "builds": [
    {
      "src": "client/public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "server/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/public/$1"
    }
  ]
}
